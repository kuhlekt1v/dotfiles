{
  // --- EDITOR --- \\
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": false,
  "editor.stickyScroll.enabled": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.minimap.enabled": false,
  "window.commandCenter": false,
  "editor.fontLigatures": true,
  "editor.tabCompletion": "on",
  "editor.formatOnSave": true,
  "editor.fontSize": 17,
  "editor.tabSize": 2,

  // --- THEME --- \\
  "editor.fontFamily": "\"JetBrainsMono Nerd Font\",'CourierNew',monospace",
  "workbench.settings.applyToAllProfiles": ["editor.defaultFormatter"],
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Jellybeans Theme",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.showTabs": "single",
  "workbench.startupEditor": "none",

  // --- TERMINAL --- \\
  "terminal.integrated.defaultProfile.windows": "zsh",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.fontSize": 16,

  // --- LANGUAGE --- \\
  "emmet.triggerExpansionOnTab": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[python]": {
    "editor.tabSize": 4
  },

  // --- VIM & VSPACECODE --- \\

  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vspacecode.bindingOverrides": [
    // --- ADDITIONAL BINDINGS --- \\
    {
      "keys": "a",
      "name": "Angular",
      "icon": "type-hierarchy-sub",
      "position": 20,
      "type": "bindings",
      "bindings": [
        {
          "key": "c",
          "name": "GoToComponent",
          "type": "command",
          "command": "angular.goToComponentWithTemplateFile"
        },
        {
          "key": "t",
          "name": "GoToTemplate",
          "type": "command",
          "command": "angular.goToTemplateForComponent"
        },
        {
          "key": "s",
          "name": "GoToStyle",
          "type": "command",
          "command": "extension.switchStyle"
        }
      ]
    },
    {
      "keys": "g.l",
      "name": "LazyGit",
      "position": 3,
      "icon": "git-branch",
      "type": "command",
      "command": "lazygit.openLazygit"
    },
    // --- REMOVED BINDINGS --- \\
    {
      "keys": "\"",
      "position": -1
    },
    {
      "keys": "!",
      "position": -1
    },
    { "keys": ["g", "b"], "position": -1 },
    { "keys": ["g", "m"], "position": -1 },
    { "keys": ["g", "s"], "position": -1 },
    { "keys": ["g", "S"], "position": -1 },
    { "keys": ["g", "U"], "position": -1 },
    { "keys": ["g", "f"], "position": -1 },
    {
      "keys": "5",
      "position": -1
    },
    {
      "keys": "6",
      "position": -1
    },
    {
      "keys": "7",
      "position": -1
    },
    {
      "keys": "8",
      "position": -1
    }
  ]
}
